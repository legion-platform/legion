apiVersion: kops/v1alpha2
kind: InstanceGroup
metadata:
  creationTimestamp: null
  labels:
    vendor: {{ vendor }}
    env_type: {{ env_type }}
    env_name: {{ env_name }}
    kops.k8s.io/cluster: {{ cluster_name }}
  name: master-{{ aws_region }}c
spec:
  image: {{ aws_image }}
  machineType: {{ master_shape }}
  maxSize: 1
  minSize: 1
  nodeLabels:
    vendor: {{ vendor }}
    env_type: {{ env_type }}
    env_name: {{ env_name }}    
    kops.k8s.io/instancegroup: master-{{ aws_region }}c
  role: Master
  subnets:
  - {{ aws_region }}c

