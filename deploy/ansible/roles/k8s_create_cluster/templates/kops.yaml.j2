apiVersion: kops/v1alpha2
kind: InstanceGroup
metadata:
  creationTimestamp: null
  labels:
    vendor: {{ vendor }}
    env_type: {{ env_type }}
    env_name: {{ env_name }}
    kops.k8s.io/cluster: {{ cluster_name }}
  name: nodes
spec:
  image: {{ aws_image }}
  machineType: {{ node_shape }}
  maxSize: {{ node_autoscaler_max }}
  minSize: {{ node_autoscaler_min }}
  nodeLabels:
    vendor: {{ vendor }}
    env_type: {{ env_type }}
    env_name: {{ env_name }}
    kops.k8s.io/instancegroup: nodes
  role: Node
  subnets:
  - {{ aws_region }}a
  - {{ aws_region }}b
  - {{ aws_region }}c

