apiVersion: kops/v1alpha2
kind: InstanceGroup
metadata:
  creationTimestamp: null
  labels:
    vendor: {{ vendor }}
    env_type: {{ env_type }}
    env_name: {{ env_name }}
    kops.k8s.io/cluster: {{ cluster_name }}
  name: bastions
spec:
