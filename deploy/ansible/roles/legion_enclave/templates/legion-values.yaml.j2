rootDomain: {{ root_domain }}
enclaveName: "{{ enclave }}"
namespace: default

package:
  version: "{{ base_version }}+{{ local_version }}"
  repository: "{{ nexus_pypi_repo }}"

  baseImage:
    repository: "{{ nexus_docker_repo }}/legion/base-python-image"
    tag: "{{ base_version }}-{{ local_version }}"

grafana:
  image:
    repository: "{{ nexus_docker_repo }}/legion/k8s-grafana"
    tag: "{{ base_version }}-{{ local_version }}"

  ingress:
    tls:
      enabled: {% if use_https == "yes" %}true{% else %}false{% endif %}
{% if dex.enabled == true %}
  annotations:
    nginx.ingress.kubernetes.io/auth-signin: https://auth.{{ cluster_name }}/oauth2/start?rd=https://$host$request_uri$is_args$args
    nginx.ingress.kubernetes.io/auth-url: http://oauth2-proxy.kube-system.svc.cluster.local:4180/oauth2/auth
    nginx.ingress.kubernetes.io/configuration-snippet: |
      auth_request_set $token $upstream_http_authorization;
      proxy_set_header Authorization $token;
{% endif %}

edge:
  enabled: true
  replicas: 2
  image: 
    repository: "{{ nexus_docker_repo }}/legion/k8s-edge"
    tag: "{{ base_version }}-{{ local_version }}"

  ingress:
    tls:
      enabled: {% if use_https == "yes" %}true{% else %}false{% endif %}

edi:
  enabled: true
  replicas: 2
  image:
    repository: "{{ nexus_docker_repo }}/legion/k8s-edi"
    tag: "{{ base_version }}-{{ local_version }}"

  ingress:
    tls:
      enabled: {% if use_https == "yes" %}true{% else %}false{% endif %}
