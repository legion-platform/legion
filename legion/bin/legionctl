import sys
import logging

from legion.cli import build_parser
import legion.utils


if __name__ == '__main__':
    parser, _ = build_parser()
    args = parser.parse_args(sys.argv[1:])

    v = vars(args)

    legion.cli.configure_logging(args)
    root_logger = logging.getLogger()

    try:
        if args.version:
            print(legion.__version__)
        else:
            if 'func' in v:
                args.func(args)
            else:
                parser.print_help()
                sys.exit(1)
    except Exception as exception:
        root_logger.exception(exception)
        sys.exit(2)
