import argparse

from legion.templating import TemplateSystem


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='K8S Template Renderer')
    parser.add_argument('--template', '-t', type=str, help='Template file path', required=True)
    parser.add_argument('--output', '-o', type=str, help='Output file path', required=True)
    parser.add_argument('--command', '-c', type=str, help='Bash command to execute on render', required=False)
    parser.add_argument('--signal', '-s', type=int, help='Signal number to send to a PID on render', required=False)
    parser.add_argument('--pid', '-p', type=int, help='PID of a process to signal number on render', required=False)
    parser.add_argument('--pid_file', '-f', type=str, help='PID file of a process to signal number on render',
                        required=False)

    args = parser.parse_args()

    template_system = TemplateSystem(args.template, args.output, bash_command=args.command,
                                     pid=args.pid, pid_file=args.pid_file)
    template_system.render_loop()
