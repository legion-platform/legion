    "experimentalDecorators": true,
    "outDir": "lib",
    "lib": ["es5", "es6", "es2015.promise", "es2015.collection", "dom"],
    "types": [],
    "jsx": "react",
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["src/*"]
}